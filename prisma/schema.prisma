generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             Int         @id @default(autoincrement())
  wallet         String      @unique
  favoriteChains String // comma separated list of chain ids, it's not an array because sqlite doesn't support it
  chainLinks     ChainLink[] // relation to links the user made for chains
}

model Chain {
  id    String      @id // e.g. "osmosis", "cosmoshub", etc.
  name  String
  links ChainLink[] // reverse relation to links for this chain
}

model ChainLink {
  id      Int    @id @default(autoincrement())
  userId  Int
  chainId String
  url     String

  user  User  @relation(fields: [userId], references: [id])
  chain Chain @relation(fields: [chainId], references: [id])

  @@index([userId])
  @@index([chainId])
}
